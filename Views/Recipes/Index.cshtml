@model IEnumerable<recipes_app.Models.RecipesModel>

@{
    ViewData["Title"] = "Recipes";
}


<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="Create" class="btn btn-outline-dark">Add New Recipe</a>
    <a asp-action="Create" class="btn btn-outline-dark">My Recipes</a>
</div>

<br />
<h3 class="mt-3">List Of Recipes Available</h3>
<br />

<div class="d-flex flex-wrap align-items-center justify-content-center">
@foreach (var item in Model) {
    <div class="card" style="width: 18rem; margin: 20px">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
            <p>Published At :    @Html.DisplayFor(modelItem => item.CreatedDate)</p>
            <p>Published By:  @Html.DisplayFor(modelItem => item.Author.Name)</p>
            <a asp-action="Details" asp-route-id="@item.RecipeId" class="btn btn-outline-secondary">Read Fully</a>
        </div>
    </div>
}
</div>
